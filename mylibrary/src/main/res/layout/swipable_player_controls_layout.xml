<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootSwipableMiniPlayer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_25">
        <com.hungama.music.utils.customview.fontview.FontAwesomeImageView
            android:id="@+id/ivPlayPause"
            style="@style/commonMediumIconStyle"
            app:fontText="@string/icon_play"
            android:layout_marginEnd="@dimen/dimen_0"
            android:layout_alignTop="@+id/exo_progress2"
            android:layout_alignBottom="@+id/exo_progress2"/>
        <androidx.media3.ui.DefaultTimeBar
            android:id="@id/exo_progress2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5"
            android:layout_marginEnd="@dimen/dimen_5"
            app:bar_height="@dimen/dimen_2"
            app:buffered_color="@color/half_opacity_white_color"
            app:played_color="@color/colorWhite"
            app:scrubber_color="@color/exo_white"
            app:scrubber_enabled_size="@dimen/dimen_10"
            app:unplayed_color="@color/half_opacity_white_color"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivPlayPause"
            android:layout_toStartOf="@+id/llExoDuration2"/>
        <RelativeLayout
            android:id="@+id/rlLive2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivPlayPause"
            android:layout_marginTop="@dimen/dimen_2"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_6"
            android:visibility="invisible">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_2"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/tvLive"
                    android:layout_marginEnd="@dimen/dimen_8"
                    app:srcCompat="@drawable/ic_live_radio_left_bg"/>
                <TextView
                    android:id="@+id/tvLive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:textSize="@dimen/font_15"
                    android:textColor="@color/colorWhite"
                    android:text="@string/live_events_str_1"
                    android:layout_centerHorizontal="true"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_2"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tvLive"
                    android:layout_marginStart="@dimen/dimen_8"
                    app:srcCompat="@drawable/ic_live_radio_right_bg"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llExoDuration2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/exo_progress2"
            android:layout_alignBottom="@+id/exo_progress2">

                <TextView
                    android:id="@+id/durationMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text"
                    android:text="-"
                    android:visibility="gone"
                    android:textColor="@color/item_sub_title_color"
                    android:textSize="@dimen/font_13"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/exo_duration_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text"
                    android:text="00:00"
                    android:textColor="@color/item_sub_title_color"
                    android:textSize="@dimen/font_13"
                    android:textStyle="normal" />

        </LinearLayout>
</RelativeLayout>