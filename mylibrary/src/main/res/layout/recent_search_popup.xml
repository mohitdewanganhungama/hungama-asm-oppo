<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_dialog_background_round">
    <View
        android:id="@+id/vDevider1"
        android:layout_width="@dimen/dimen_42"
        android:layout_height="@dimen/dimen_4"
        android:background="@drawable/bottomsheet_icon_background"
        android:layout_marginTop="@dimen/dimen_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRecentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_33"
        android:alpha="0.9"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:gravity="center_horizontal"
        android:text="@string/search_str_15"
        android:textColor="#ffffff"
        android:textSize="@dimen/font_17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vDevider1" />

    <Button
        android:id="@+id/ivRetry"
        android:layout_width="@dimen/dimen_105"
        android:layout_height="@dimen/dimen_42"
        android:layout_marginLeft="@dimen/dimen_27"
        android:layout_marginTop="@dimen/dimen_31"
        android:layout_marginBottom="@dimen/dimen_33"
        android:background="@drawable/bottom_dialog_delete_btn_background"
        android:fontFamily="@font/sf_pro_text"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="@dimen/font_5"
        android:text="@string/reward_str_42"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="@dimen/font_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecentText" />

    <Button
        android:layout_width="@dimen/dimen_146"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_blue"
        android:layout_marginTop="@dimen/dimen_31"
        android:text="@string/search_str_14"
        android:layout_marginBottom="@dimen/dimen_33"
        android:textColor="#ffffff"
        android:textSize="@dimen/font_16"
        android:fontFamily="@font/sf_pro_text"
        android:lineSpacingExtra="@dimen/font_4"
        android:textAllCaps="false"
        android:layout_marginRight="@dimen/dimen_26"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecentText" />





</androidx.constraintlayout.widget.ConstraintLayout>