<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rl_three_dot_menu_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_18_2"
        android:layout_marginEnd="@dimen/dimen_18"
        android:layout_marginTop="@dimen/dimen_15">
        <RelativeLayout
            android:id="@+id/rlItemView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<ImageView
                android:id="@+id/iv_three_dot_menu"
                android:layout_width="@dimen/dimen_22"
                android:layout_height="@dimen/dimen_21"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_heart_chart"
                app:tint="@color/colorWhite" />-->
            <com.hungama.music.utils.customview.fontview.FontAwesomeImageView
                android:id="@+id/iv_three_dot_menu"
                style="@style/commonMediumIconStyle"
                app:fontTextColor="@color/colorWhite"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_centerVertical="true"
                app:fontTextSize="@dimen/font_17"/>

            <TextView
                android:id="@+id/tv_three_dot_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_toEndOf="@+id/iv_three_dot_menu"
                android:fontFamily="@font/sf_pro_text"
                android:includeFontPadding="false"
                android:text="@string/menu_str_10"
                android:textColor="@color/item_title_color"
                android:textSize="@dimen/font_17"
                android:textStyle="normal" />
        </RelativeLayout>

        <View
            android:id="@+id/devider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_below="@+id/rlItemView"
            android:layout_marginTop="@dimen/dimen_14"
            android:alpha="0.3"
            android:background="#707070" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>