<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_31"
            android:layout_marginEnd="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_48"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:fontFamily="@font/sf_pro_text"
                android:textSize="@dimen/font_17"
                android:gravity="center_vertical"
                android:textColor="#f5f5f5"
                android:lineSpacingExtra="35sp"
                android:visibility="gone"/>
            <RelativeLayout
                android:id="@+id/rlDolby"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_14_5"
                    android:layout_centerVertical="true"
                    android:id="@+id/ivDolby"
                    android:layout_gravity="start|center_vertical"
                    android:src="@drawable/dolby_quality_icon_text"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llUpgradePlan"
                    android:layout_width="@dimen/dimen_56"
                    android:layout_height="@dimen/dimen_20"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.hungama.music.utils.customview.fontview.FontAwesomeImageView
                        style="@style/commonMediumIconStyle"
                        app:fontText="@string/icon_crown"
                        app:fontTextSize="@dimen/font_11"
                        android:layout_marginEnd="0dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUpgradePlan"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dimen_4"
                        android:fontFamily="@font/sf_pro_text_bold"
                        android:gravity="center"
                        android:text="@string/gold"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_11"
                        android:textStyle="normal" />

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_18"
                    android:id="@+id/ivTick"
                    android:src="@drawable/ic_tick"/>
            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:id="@+id/devider"
            android:layout_width="match_parent"
            android:background="@color/home_mini_player_bg"
            android:alpha="0.3"
            android:layout_height="1dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>