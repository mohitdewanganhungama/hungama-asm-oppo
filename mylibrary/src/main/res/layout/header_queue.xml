<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_48"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/dimen_2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="start|center"
    android:orientation="horizontal"
    android:clickable="true"
    >
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dimen_44"
        android:layout_height="@dimen/dimen_44"
        android:paddingStart="@dimen/dimen_13_5"
        android:paddingEnd="@dimen/dimen_13_5"
        android:paddingTop="@dimen/dimen_17_9"
        android:paddingBottom="@dimen/dimen_17_9"
        android:layout_gravity="center"
        android:id="@+id/ivBackQueue"
        android:layout_marginStart="@dimen/dimen_4_5"
        android:src="@drawable/ic_back_audio"/>


    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_text_medium"
        android:lineSpacingExtra="@dimen/font_3"
        android:text="@string/music_player_str_25"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:textSize="@dimen/font_16"
        />



    <LinearLayout
        android:id="@+id/llMusicMenuDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/img_queue_menu_dots"
            android:layout_width="@dimen/dimen_44"
            android:layout_height="@dimen/dimen_44"
            android:paddingStart="@dimen/dimen_20"
            android:paddingEnd="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_13"
            android:paddingBottom="@dimen/dimen_13"
            android:layout_gravity="center"
            android:contentDescription="@string/login_str_2"
            app:srcCompat="@drawable/ic_menu_dot_audio"
             />
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>