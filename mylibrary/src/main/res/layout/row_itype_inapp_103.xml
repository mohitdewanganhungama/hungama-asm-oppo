<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_space_between_title_and_artwork_space_listing_page"
        android:layout_marginEnd="@dimen/dimen_20"
        android:background="@drawable/bg_search_bucket">



        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/dimen_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close"
            app:tint="#aaa7a7" />





        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_30"
            android:layout_marginEnd="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/StyleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discover_str_29"
                android:layout_marginTop="@dimen/dimen_0"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:textStyle="normal"
                android:textSize="@dimen/font_17"
                android:textColor="@color/colorWhite"
                android:includeFontPadding="false"
                />

            <TextView
                style="@style/StyleTextView"
                android:id="@+id/tvSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_medium"
                android:maxLines="2"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"
                android:textSize="@dimen/font_17"
                android:textColor="@color/item_title_color"
                android:layout_marginTop="@dimen/dimen_10"
                android:includeFontPadding="false"
                android:text="@string/discover_str_30"
                 />

            <com.hungama.music.utils.customview.emojiratingbar.EmojiRatingBar
                android:id="@+id/emoji_rating_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:showText="false"
                app:titleColor="#844848"
                app:defaultValue="3"
                android:fontFamily="@font/sf_pro_text"
                android:layout_marginTop="@dimen/dimen_13"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="24dp"/>

            <Button
                android:id="@+id/btnSumit"
                style="@style/StyleButtonView"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/dimen_130"
                android:layout_marginTop="@dimen/dimen_18"
                android:layout_marginBottom="@dimen/dimen_20"
                android:background="@drawable/corner_radius_18_bg_blue"
                android:text="@string/login_str_1"
                android:textColor="@color/colorWhite" />
        </androidx.appcompat.widget.LinearLayoutCompat>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>