<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#282828">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivMusicVideoDownloading"
        android:layout_width="@dimen/dimen_142"
        android:layout_height="@dimen/dimen_90"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/dimen_18"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginBottom="@dimen/dimen_12"
        android:src="@drawable/bg_gradient_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Circular" />

    <ImageView
        android:layout_width="@dimen/dimen_21_9"
        android:layout_height="@dimen/dimen_22"
        android:src="@drawable/image_movie_downloading_icon"
        app:layout_constraintBottom_toBottomOf="@+id/ivMusicVideoDownloading"
        app:layout_constraintEnd_toEndOf="@+id/ivMusicVideoDownloading"
        app:layout_constraintStart_toStartOf="@+id/ivMusicVideoDownloading"
        app:layout_constraintTop_toTopOf="@+id/ivMusicVideoDownloading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_6"
        android:layout_marginBottom="@dimen/dimen_6"
        android:alpha="0.8"
        android:background="@drawable/bg_music_video_time"
        android:gravity="center_vertical|center_horizontal"
        android:text="03:45"
        android:textColor="#ffffff"
        android:textSize="@dimen/font_10"
        app:layout_constraintBottom_toBottomOf="@id/ivMusicVideoDownloading"
        app:layout_constraintStart_toStartOf="@id/ivMusicVideoDownloading" />

    <TextView
        android:id="@+id/tvMusicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_11"
        android:text=""
        android:textColor="#ffffff"
        android:alpha="0.9"
        android:textSize="@dimen/font_15"
        app:layout_constraintStart_toEndOf="@id/ivMusicVideoDownloading"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMusicSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_3"
        android:text=""
        android:textColor="#c6c6c6"
        android:textSize="@dimen/font_13"
        app:layout_constraintStart_toEndOf="@id/ivMusicVideoDownloading"
        app:layout_constraintTop_toBottomOf="@id/tvMusicTitle" />

    <View
        android:id="@+id/vDownlodingshape"
        android:layout_width="@dimen/dimen_117"
        android:layout_height="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_5"
        android:alpha="0.5"
        android:background="@drawable/bg_download_awaited"
        app:layout_constraintStart_toEndOf="@id/ivMusicVideoDownloading"
        app:layout_constraintTop_toBottomOf="@id/tvMusicSubTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/font_5"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="@dimen/font_11"
        app:layout_constraintBottom_toBottomOf="@+id/vDownlodingshape"
        app:layout_constraintEnd_toEndOf="@+id/vDownlodingshape"
        app:layout_constraintStart_toStartOf="@+id/vDownlodingshape"
        app:layout_constraintTop_toTopOf="@+id/vDownlodingshape" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_5"
        android:text=""
        android:textColor="#999999"
        android:textSize="@dimen/font_13"
        app:layout_constraintStart_toEndOf="@id/ivMusicVideoDownloading"
        app:layout_constraintTop_toBottomOf="@id/vDownlodingshape" />

    <ImageView
        android:layout_width="@dimen/dimen_4"
        android:layout_height="@dimen/dimen_18"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginRight="@dimen/dimen_18"
        android:src="@drawable/image_more_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>