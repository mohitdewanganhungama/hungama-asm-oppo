<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPlaceholder"
        android:layout_marginTop="@dimen/common_space_between_title_and_artwork_space_listing_page"
        android:paddingEnd="@dimen/dimen_18"
        android:paddingStart="@dimen/dimen_18"
        android:orientation="horizontal">
        <!--<androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen_7"
            android:elevation="10dp">-->
        <RelativeLayout
            android:id="@+id/ivUserImage"
            android:layout_width="@dimen/dimen_55"
            android:layout_height="@dimen/dimen_55"
            android:background="@drawable/bg_gradient_placeholder"
            android:scaleType="centerInside"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.RoundCornerBucket">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/StyleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_0"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:lineSpacingExtra="4sp"
                    android:text="27"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <TextView
                    style="@style/StyleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_0"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:letterSpacing="0.1"
                    android:lineSpacingExtra="2sp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:text="JUNE" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </RelativeLayout>
        <!--</androidx.cardview.widget.CardView>-->

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/dimen_10"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/StyleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:fontFamily="@font/sf_pro_text_medium"
                android:lineSpacingExtra="3sp"
                android:textColor="#c6c6c6"
                android:textAlignment="textStart"
                android:textSize="@dimen/font_15"
                android:maxLines="2"
                android:textStyle="normal"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text"
                android:id="@+id/tvSubTitle"
                style="@style/StyleTextViewSubtitle"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textAlignment="textStart"
                android:textColor="#999ea2"
                android:layout_gravity="start|center"
                android:layout_marginTop="0dp"
                android:lineSpacingExtra="2sp"
                tools:text=""
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <LinearLayout
            android:layout_width="@dimen/dimen_77"
            android:layout_height="@dimen/dimen_36"
            android:background="@drawable/bg_btn_blue"
            android:gravity="top|center"
            android:layout_marginTop="@dimen/dimen_5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvBtnPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/sf_pro_text"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="5sp"
                tools:text="499"
                />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>