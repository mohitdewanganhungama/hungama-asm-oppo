<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_dialog_background_round"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/vDevider1"
        android:layout_width="@dimen/dimen_42"
        android:layout_height="@dimen/dimen_4"
        android:layout_marginTop="@dimen/dimen_7"
        android:background="@drawable/bottomsheet_icon_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivConnetct"
        android:layout_width="@dimen/dimen_12"
        android:layout_height="@dimen/dimen_22_5"
        android:layout_marginLeft="@dimen/dimen_20_2"
        android:layout_marginTop="@dimen/dimen_22"
        android:src="@drawable/connect_device_bluetooth_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vDevider1" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16_5"
        android:layout_marginTop="@dimen/font_17"
        android:lineHeight="@dimen/dimen_52"
        android:lineSpacingExtra="@dimen/dimen_35"
        android:text="@string/popup_str_50"
        android:textColor="#f5f5f5"
        android:textSize="@dimen/font_17"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivConnetct"
        app:layout_constraintTop_toBottomOf="@+id/vDevider1" />

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:text="@string/popup_str_52"
        android:textColor="#2ca1f7"
        android:textSize="@dimen/font_13"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/rvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_18"
        android:layout_marginTop="@dimen/dimen_32"
        android:lineHeight="@dimen/font_17"
        android:lineSpacingExtra="@dimen/font_2"
        android:text="popup_str_51"
        android:textColor="#ffffff"
        android:textSize="@dimen/font_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubTitle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_18"
        android:layout_marginRight="@dimen/font_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvTitle" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="@dimen/dimen_118"
        android:layout_height="@dimen/dimen_42"
        android:layout_marginTop="@dimen/dimen_24"
        android:background="@drawable/bottom_dialog_delete_btn_background"
        android:lineSpacingExtra="@dimen/font_6"
        android:text="@string/login_str_38"
        android:textColor="#ffffff"
        android:layout_marginBottom="@dimen/dimen_33"
        android:textSize="@dimen/font_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvList" />


</androidx.constraintlayout.widget.ConstraintLayout>