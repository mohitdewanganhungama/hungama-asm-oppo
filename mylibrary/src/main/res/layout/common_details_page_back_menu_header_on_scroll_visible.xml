<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/header_back_menu"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/dimen_44"
        android:layout_height="@dimen/dimen_44"
        android:paddingStart="@dimen/dimen_15_5"
        android:paddingEnd="@dimen/dimen_15_5"
        android:paddingTop="@dimen/dimen_12"
        android:paddingBottom="@dimen/dimen_12"
        android:src="@drawable/white_back_arrow"
        app:tint="@color/colorWhite1"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dimen_2"/>

    <ImageView
        android:id="@+id/threeDotMenu"
        android:layout_width="@dimen/dimen_44"
        android:layout_height="@dimen/dimen_44"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_13"
        android:paddingEnd="@dimen/dimen_18"
        android:paddingBottom="@dimen/dimen_13"
        android:src="@drawable/ic_menu_dot_audio"
        app:tint="@color/colorWhite1" />
</RelativeLayout>