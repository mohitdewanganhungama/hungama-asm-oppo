<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dimen_14"
    android:id="@+id/clMain"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivLoginPlatform"
            android:layout_width="@dimen/dimen_39"
            android:layout_height="@dimen/dimen_39"
            android:src="@drawable/bg_gradient_placeholder"
            android:contentDescription="@string/app_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"/>

        <TextView
            android:id="@+id/tvLoginPlatform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_medium"
            android:text="@string/login_str_18"
            android:textColor="@color/item_sub_title_color"
            android:textSize="@dimen/font_11"
            android:visibility="gone"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="@+id/ivLoginPlatform"
            app:layout_constraintEnd_toEndOf="@+id/ivLoginPlatform"
            app:layout_constraintTop_toBottomOf="@+id/ivLoginPlatform"/>
</androidx.constraintlayout.widget.ConstraintLayout>