<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_space_between_title_and_artwork_space_listing_page"
        android:layout_marginEnd="@dimen/dimen_20"
        android:background="@drawable/bg_search_bucket">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/dimen_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close"
            app:tint="#aaa7a7" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/StyleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_32"
            android:text="How do like conjuring 2?"
            android:maxLines="3"
            android:textAlignment="center"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:textStyle="normal"
            android:textSize="@dimen/font_17"
            android:paddingStart="@dimen/dimen_16"
            android:paddingEnd="@dimen/dimen_16"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:includeFontPadding="false"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_20"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_marginBottom="@dimen/dimen_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle">
            <TextView
                android:id="@+id/tv1"
                style="@style/StyleTextView"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/sf_pro_text_medium"
                android:textStyle="normal"
                android:textSize="@dimen/font_15"
                android:textColor="#adadad"
                android:background="@drawable/corner_radius_18_bg_alpha_white_with_border"
                android:text="Yes"
                />

            <TextView
                android:id="@+id/tv2"
                style="@style/StyleTextView"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/sf_pro_text_medium"
                android:textStyle="normal"
                android:textSize="@dimen/font_15"
                android:textColor="#adadad"
                android:background="@drawable/corner_radius_18_bg_alpha_white_with_border"
                android:text="Yes"
                />
            <TextView
                android:id="@+id/tv3"
                style="@style/StyleTextView"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/sf_pro_text_medium"
                android:textStyle="normal"
                android:textSize="@dimen/font_15"
                android:textColor="#adadad"
                android:background="@drawable/corner_radius_18_bg_alpha_white_with_border"
                android:text="Yes"
                />
            <TextView
                android:id="@+id/tv4"
                style="@style/StyleTextView"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/sf_pro_text_medium"
                android:textStyle="normal"
                android:textSize="@dimen/font_15"
                android:textColor="#adadad"
                android:background="@drawable/corner_radius_18_bg_alpha_white_with_border"
                android:text="Yes"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>