<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false">

    <include layout="@layout/common_blur_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/topView"
            android:layout_width="@dimen/dimen_42"
            android:layout_height="@dimen/dimen_4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_8"
            android:background="#4c4c4c" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topView"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_14"
            android:layout_marginEnd="@dimen/dimen_16"
            android:clipToPadding="false"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text"
                        android:lineSpacingExtra="43sp"
                        android:text="@string/music_player_str_21"
                        android:textColor="#f5f5f5"
                        android:textSize="@dimen/font_17"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvMoodTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text"
                        android:lineSpacingExtra="42sp"
                        android:text="@string/music_player_str_22"
                        android:textColor="#c6c6c6"
                        android:textSize="@dimen/font_13"
                        android:textStyle="normal" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dimen_11"
                    android:layout_height="@dimen/dimen_18"
                    android:src="@drawable/ic_more" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_11"
                android:alpha="0.3"
                android:background="@color/home_mini_player_bg" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llEra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_11"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text"
                        android:lineSpacingExtra="43sp"
                        android:text="@string/music_player_str_43"
                        android:textColor="#f5f5f5"
                        android:textSize="@dimen/font_17"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvEraTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text"
                        android:lineSpacingExtra="42sp"
                        android:text="1970 - 2008"
                        android:textColor="#c6c6c6"
                        android:textSize="@dimen/font_13"
                        android:textStyle="normal" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dimen_11"
                    android:layout_height="@dimen/dimen_18"
                    android:src="@drawable/ic_more" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_11"
                android:alpha="0.3"
                android:background="@color/home_mini_player_bg" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llTempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_11"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text"
                        android:lineSpacingExtra="43sp"
                        android:text="@string/tempo"
                        android:textColor="#f5f5f5"
                        android:textSize="@dimen/font_17"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvTempoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text"
                        android:lineSpacingExtra="42sp"
                        android:text="@string/general_setting_str_21"
                        android:textColor="#c6c6c6"
                        android:textSize="@dimen/font_13"
                        android:textStyle="normal" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dimen_11"
                    android:layout_height="@dimen/dimen_18"
                    android:src="@drawable/ic_more" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_11"
                android:alpha="0.3"
                android:background="@color/home_mini_player_bg" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_11"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text"
                        android:lineSpacingExtra="43sp"
                        android:text="@string/discover_str_31"
                        android:textColor="#f5f5f5"
                        android:textSize="@dimen/font_17"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvLanguageTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text"
                        android:lineSpacingExtra="42sp"
                        android:text="English"
                        android:textColor="#c6c6c6"
                        android:textSize="@dimen/font_13"
                        android:textStyle="normal" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dimen_11"
                    android:layout_height="@dimen/dimen_18"
                    android:src="@drawable/ic_more" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:alpha="0"
            android:background="@drawable/language_selection_sheet_gradient" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llAskLater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/llMain"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/three_dot_menu_close"
                android:layout_width="@dimen/dimen_122"
                android:layout_height="@dimen/dimen_42"
                android:layout_marginBottom="@dimen/dimen_33"
                android:layout_marginTop="@dimen/dimen_26"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/corner_radius_18_bg_alpha_white">
                <com.hungama.music.utils.customview.fontview.FontAwesomeImageView
                    style="@style/commonMediumIconStyle"
                    android:visibility="gone"
                    app:fontText="@string/icon_delete"/>
                <TextView
                    android:id="@+id/btnAsk"
                    style="@style/commonMediumButtonStyle"
                    android:text="@string/music_player_str_15" />
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone"
            android:indeterminateTint="@color/font_color" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>